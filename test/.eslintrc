{
  "env": {
    "mocha": true
  },
  "rules": {
    "global-require": 0,
    "react/jsx-no-bind": 1,
    "no-use-before-define": 0,
    "react/prefer-stateless-function": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "comma-dangle": 0,
    "consistent-return": 0,
    "immutable/no-let": 1,
    "immutable/no-this": 1,
    "immutable/no-mutation": 1
  }
}
